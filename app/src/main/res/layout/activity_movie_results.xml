<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MovieResultsActivity">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/movie_search_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>

    <ProgressBar
            android:id="@+id/movie_search_progress_bar"
            android:layout_width="@dimen/progress_bar_width_height"
            android:layout_height="@dimen/progress_bar_width_height"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"/>

    <Button
            android:id="@+id/movie_search_retry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_retry"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"/>

</FrameLayout>